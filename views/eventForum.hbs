<section class="section">
    <div class="column is-6 is-offset-3">
        {{#each posts}}
        <div class="card mb-3 has-background-grey-lighter" data-aos="fade-up" data-aos-duration="1200">
          <div class="card-content">
            <h3 class="title is-4">{{dataValues.poster_name}} says</h3>
            <p class="mb-3">{{dataValues.body}}</p>
          </div>
        </div>
      </div>
    </div>
    {{/each}}

        <form action="/api/addpost/{{eventid}}" method="POST" class="">
            <h2 class="title is-2 mt-6 mb-6 is-1 is-spaced has-text-centered">Post Something on the Message Board!</h2>
            <hr class="content-divider mb-5">
            <div class="field">
                <label class="label" for="">Write a note:</label>
                <div class="control">
                    <input class="input" type="text" name="content" placeholder="Your message here..." id="postContent">
                </div>
            </div>
            <button class="button is-fullwidth mt-5 is-primary" type="submit">Post</button>
        </form>


    </div>
</section>