<section class="section">
    {{#each dogs}}
    <div class="container py-4">
        <h2 class="title has-text-centered mb-6">Your Barkle Profile</h2>
        <hr class="content-divider mb-5">
        <div class="image columns is-centered">
            <div class="column is-6"><img class="image is-rounded" src="./assets/img/Pup.PNG" alt=""></div>
            <div class="column is-6">
                <h4 class="title is-spaced is-4">{{dataValues.name}}</h4>
                <p class="subtitle">Favorite Activity: {{dataValues.fav_activity}}</p>
                <div>
                    <div class="media">
                        <div class="media-left">
                            <figure class="image is-24x24"><img
                                    src="https://static.shuffle.dev/uploads/files/53/53dd366aaf02ca0745c10f8cbf2f133e39d15f5e/paw-icon.png"
                                    alt=""></figure>
                        </div>
                        <div class="media-content">
                            <div class="content">
                                <p>Breed: {{dataValues.breed}}</p>
                            </div>
                        </div>
                    </div>
                    <div class="media">
                        <div class="media-left">
                            <figure class="image is-24x24"><img
                                    src="https://static.shuffle.dev/uploads/files/53/53dd366aaf02ca0745c10f8cbf2f133e39d15f5e/Barkle-Icon.png"
                                    alt=""></figure>
                        </div>
                        <div class="media-content">
                            <div class="content">
                                <p>Outgoing: {{dataValues.outgoing}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="column is-6 is-offset-3">
            <div class="buttons is-centered my-4"><a class="button is-primary" href="/createProfile">Add Another
                    Dog</a></div>
        </div>
        {{/each}}
</section>